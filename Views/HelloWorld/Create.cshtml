@model DogViewModel

<hr class="w-50" />

<div class="row">
	<div class="col-6">
		<div class="card">
			<div class="card-header">
				<h5>Create a new Doggo</h5>
			</div>
			<div class="card-body">
				<form asp-controller="HelloWorld" asp-action="CreateDog" method="post">
					<div class="mb-3">
						<label class="form-label">Doggo Name</label>
						<input asp-for=Name type="text" class="form-control" />
					</div>
					<div class="mb-3">
						<label class="form-label from-control">Doggo Age</label>
						<input asp-for=Age type="text" class="form-control" />
					</div>
					<div class="mb-1">
						<button type="submit" class="btn btn-primary">Save</button>
					</div>
				</form>
			</div>
			<div class="card-footer"></div>
		</div>
	</div>
</div>